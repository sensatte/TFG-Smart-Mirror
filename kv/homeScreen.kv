#:kivy 1.0
<HomeScreen>:

    GifsWidget:
        # pos_hint: {"center_x": .5, "center_y": .5}
        pos: 0,0
        size: root.size

    InfoDayWidget:
        size_hint:(.3, .15)
        pos_hint:{"x": 0, "top": 1}

    SpotifyWidget2:
        size_hint:(.3, .15)
        pos: 0,10

    ImageButton:
        id: menuButton
        keep_ratio: True
        allow_stretch: True
        source: "images/menu/app-drawer.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .1)
        on_press: root.goToConfigScreen()

    

    