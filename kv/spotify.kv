#:kivy 1.0
#:set buttonsSize (.2, .25)

#TODO AÃ‘ADIR RESTO DE WIDGETS

<SpotifyWidget2>:
    canvas.before:
        Color:
            rgba: 0.2,0.5,0.4,1
        Rectangle:
            pos: 0, 0
            size: self.size

    Label:
        id: deviceId
        text: root.deviceId[-4:]
        pos_hint: {"center_x": .5, "top": 1}
        #TODO WHY WONT POS_HINT WORK HERE

    Label:
        id: songNameLabel
        text: root.songName

    ImageButton:
        id: startPauseButton
        keep_ratio: False
        allow_stretch: True
        source: "images/menu/settings.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: buttonsSize
        # on_press: print(root.wrapper.test1, "   ", root.wrapper.test())
        # on_press: root.wrapper.test()
        on_press: root.songName = "pause/start"
        canvas.before:
            Color:
                rgba: 0.2,0.5,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size

    ImageButton:
        id: nextButton
        keep_ratio: False
        allow_stretch: True
        source: "images/menu/settings.png"
        pos_hint: {"center_x": .75, "y": 0}
        size_hint: buttonsSize
        on_press: root.songName = "next"
        canvas.before:
            Color:
                rgba: 0.2,0.5,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size

    ImageButton:
        id: previousButton
        keep_ratio: False
        allow_stretch: True
        source: "images/menu/settings.png"
        pos_hint: {"center_x": .25, "y": 0}
        size_hint: buttonsSize
        on_press: root.songName = "previous"
        canvas.before:
            Color:
                rgba: 0.2,0.5,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size

    