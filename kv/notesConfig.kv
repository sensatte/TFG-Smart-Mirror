#:kivy 1.0
#:set buttonNormal [1,1,1,.7]
#:set buttonPressed [1,1,1,1]
<NotesConfig>:
    showNotes: showNotes
    size_hint:.4,.4
    id: main
    TabbedPanel:
        id:panel
        size_hint: 1,.75
        background_color: 0,0,0,0
        do_default_tab: False
        padding: [0,5,0,5]
        tab_width: self.parent.width / 2
        tab_height: 30
        pos_hint: {"center_x": .5, "center_y": .5}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2.
                rectangle: self.x, self.y, self.width, self.height 

    #Elegir notas
        TabbedPanelItem:
            background_color: 1,0,0,0
            width: 10
            id:elegir
            canvas:
                Color:
                    rgba: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
                Rectangle:
                    source: "images\\menu\\notes.png"
                    size: 30,30
                    pos: self.center_x-15, self.center_y-15
            Scrolling:
                GridLayout:
                    id: showNotes
                    cols: 2
                    padding: 15
                    spacing: 10
                    size_hint_y: None
                    row_force_default:True
                    row_default_height:150
                    # row_default_height:self.height*1.2



    
    #crear notas
        TabbedPanelItem:
            background_color: 1,0,0,0
            width: 10
            canvas:
                Color:
                    rgba: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
                Rectangle:
                    source: "images\\menu\\writing.png"
                    size: 30,30
                    pos: self.center_x-15, self.center_y-15
            Scrolling:
                id:scrollCreateNote
                GridLayout:
                    cols: 1
                    padding: 15
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    
                    Label:
                        text: "Crear Nota"
                        font_size:"22"
                        height: 20

        #############################################

                #titulo
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 40

                        Label:
                            text: "TÃ­tulo:"
                            size_hint: 0.95, 0.7
                        TextInput:
                            id: titletinput
                            hint_text:'Enter text'
                            hint_text_color: [1,1,1,1]
                            pos_hint: {'center_x': 0.5, 'y': 0} 
                            size_hint: 0.95, 0.7
                            background_color: [1,1,1,0]
                            valign: 'bottom'
                            font_size: 11
                            cursor_color: [1,1,1,.8]
                            canvBack: [1,1,1,.4]
                            canvas.before:
                                Color:
                                    rgba: self.canvBack
                                Line:
                                    width: 1.
                                    rectangle: self.x, self.y, self.width, self.height                    
        #############################################
                    Widget:
                        size_hint_y: None
                        height: 6
                        canvas:
                            Color:
                                rgba: 1., 1., 1., .6
                            Rectangle:
                                pos: root.width/20, self.center_y
                                size: root.width-root.width/10, 2
        #############################################
                
                #texto
                    BoxLayout:
                        size_hint_y: None
                        orientation: 'horizontal'
                        height: 60

                        Label:
                            text: "Texto:"
                            valign: 'top'
                            size_hint: 0.95, 1
                        TextInput:
                            id: textinput
                            hint_text:'Enter text'
                            hint_text_color: [1,1,1,1]
                            pos_hint: {'center_x': 0.5, 'y': 0} 
                            size_hint: 0.95, 1
                            background_color: [1,1,1,0]
                            valign: 'bottom'
                            font_size: 11
                            cursor_color: [1,1,1,.8]
                            canvBack:[1,1,1,.4]
                            canvas.before:
                                Color:
                                    rgba: self.canvBack
                                Line:
                                    width: 1.
                                    rectangle: self.x, self.y, self.width, self.height                    
                   
        #############################################
                    Widget:
                        size_hint_y: None
                        height: 6
                        canvas:
                            Color:
                                rgba: 1., 1., 1., .6
                            Rectangle:
                                pos: root.width/20, self.center_y
                                size: root.width-root.width/10, 2
        #############################################
                #color
                    GridLayout:
                        size_hint_y: None
                        cols:2
                        # height: 80
                        spacing: 10
                        padding: [20,0]
                        ToggleButton:
                            group: "colorNota"
                            state: "down"
                            background_color:[0, 0, 0, 0]
                            allow_no_selection: False
                            on_press: root.backg=[224, 187, 228, 1]
                            canvas.before:
                                Color:
                                    rgba: [224/255, 187/255, 228/255, 1] if self.state == "down" else [224/255, 187/255, 228/255, .5]
                                RoundedRectangle:
                                    size:self.size
                                    pos:self.pos
                                    radius: [15]
                        ToggleButton:
                            group: "colorNota"
                            background_color:[0, 0, 0, 0]
                            allow_no_selection: False
                            on_press: root.backg=[125, 150, 176, 1]
                            canvas.before:
                                Color:
                                    rgba: [125/255, 150/255, 176/255, 1] if self.state == "down" else [125/255, 150/255, 176/255,.5]
                                RoundedRectangle:
                                    size:self.size
                                    pos:self.pos
                                    radius: [15]
                        ToggleButton:
                            group: "colorNota"
                            background_color:[0, 0, 0, 0]
                            allow_no_selection: False
                            on_press: root.backg=[140, 183, 141,1]
                            canvas.before:
                                Color:
                                    rgba: [140/255, 183/255, 141/255,1] if self.state == "down" else [140/255, 183/255, 141/255, .5]
                                RoundedRectangle:
                                    size:self.size
                                    pos:self.pos
                                    radius: [15]

                        ToggleButton:
                            group: "colorNota"
                            background_color:[0, 0, 0, 0]
                            allow_no_selection: False
                            on_press: root.backg=[149, 125, 173, 1]
                            canvas.before:
                                Color:
                                    rgba: [149/255, 125/255, 173/255, 1] if self.state == "down" else [149/255, 125/255, 173/255, .5]
                                RoundedRectangle:
                                    size:self.size
                                    pos:self.pos
                                    radius: [15]

        #############################################
                    Widget:
                        size_hint_y: None
                        height: 6
                        canvas:
                            Color:
                                rgba: 1., 1., 1., .6
                            Rectangle:
                                pos: root.width/20, self.center_y
                                size: root.width-root.width/10, 2
        #############################################


                    Button:
                        size_hint_y: None
                        height: 30
                        background_color:[1,1,1,0]
                        backgSave:[1,1,1,.2]
                        text:"Guardar"
                        on_press: root.writeNote(titletinput.text, False, textinput.text, None, root.backg) if (titletinput.text!="" and textinput.text!="") else print("falta texto")
                        on_press: root.badAnim(self) if (titletinput.text=="" or textinput.text=="") else root.goodAnim(self)
                        canvas.before:
                            Color:
                                rgba: self.backgSave
                            RoundedRectangle:
                                size:self.size[0]-50, self.size[1]+10
                                pos:self.pos[0]+25, self.pos[1]-5
                                radius: [18]
    ImageButton:
        id: homeButton
        size_hint_y: None
        source: "images/menu/previous.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .11)
        on_press: root.pressedBack(self)

<ColoredLabelConfig>:
    font_size: root.height*0.1
    text_size: self.width, None
    size: self.texture_size
    halign: 'center'
    is_shortened: True
    on_press: root.pinNote(self.noteid, self.pinned)

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: (1,1,1,1) if self.pinned==True else (1,1,1,0)

        Line:
            width: 1.
            rectangle: self.x, self.y, self.width, self.height 

