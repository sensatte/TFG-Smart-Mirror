        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .11)
        on_press: root.pressedBack(self)

<ColoredLabelConfig>:
    font_size: root.height*0.1
    text_size: self.width, None
    size: self.texture_size
    halign: 'center'
    is_shortened: True
    on_press: root.pinNote(self.noteid, self.pinned)

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        Color:
            rgba: (1,1,1,1) if self.pinned==True else (1,1,1,0)

        Line:
            width: 1.
            rectangle: self.x, self.y, self.width, self.height 


<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius: self.border_radius

