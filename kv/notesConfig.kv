<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size:self.size[0]-50, self.size[1]+10
            pos:self.pos[0]+25, self.pos[1]-5
            radius: self.border_radius

