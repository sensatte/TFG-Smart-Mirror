#:kivy 1.0
<MenuScreen>:
    #:set gridLayoutSpacing 15
    #:set gridLayoutSize (.7, .5)

    BoxLayout:
        orientation: 'vertical'

        Carousel:
            direction: 'right'
            anim_type: 'out_quart'

            GridLayout:
                canvas.before:
                    Color:
                        rgba: 0.7,0.2,0.8,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: optionsGrid1
                cols: 3
                rows: 3
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: gridLayoutSize
                padding: gridLayoutSpacing
                spacing: gridLayoutSpacing

                ImageButton:
                    id: infoDaySettingsButton
                    keep_ratio: False
                    allow_stretch: True
                    source: "images/menu/clock.png"
                    on_press: print("infoDaySettings")
                    canvas.before:
                        Color:
                            rgba: 0.3,0.1,0.5,.2
                        Rectangle:
                            pos: self.pos
                            size: self.size
                
                ImageButton:
                    id: newsSettingsButton
                    keep_ratio: False
                    allow_stretch: True
                    source: "images/menu/news.png"
                    on_press: print("newsSettings")
                    canvas.before:
                        Color:
                            rgba: 0.3,0.1,0.5,.2
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    text: "Hello 10"
                Button:
                    text: "Hello 11"
                Button:
                    text: "Hello 12"
                Button:
                    text: "Hello 13"
                Button:
                    text: "Hello 14"
                Button:
                    text: "Hello 15"
                Button:
                    text: "Hello 16"
                

            GridLayout:
                canvas.before:
                    Color:
                        rgba: 0.7,0.2,0.8,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: optionsGrid2
                cols: 3
                rows: 3
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: gridLayoutSize
                padding: gridLayoutSpacing
                spacing: gridLayoutSpacing

                Button:
                    text: "Hello 10"
                Button:
                    text: "Hello 11"
                Button:
                    text: "Hello 12"
                Button:
                    text: "Hello 13"
                Button:
                    text: "Hello 14"
                Button:
                    text: "Hello 15"
                Button:
                    text: "Hello 16"
                Button:
                    text: "Hello 17"
                Button:
                    text: "Hello 18"

            
        ImageButton:
            id: homeButton
            keep_ratio: False
            allow_stretch: True
            source: "images/menu/Spotify_bonico.png"
            pos_hint: {"center_x": .5, "y": 0}
            size_hint: (.17, .11)
            on_press: root.goToHomeScreen()
            canvas.before:
                Color:
                    rgba: 0.2,0.5,0.4,1
                Rectangle:
                    pos: self.pos
                    size: self.size