#:kivy 1.0
<MenuScreen>:
    ImageButton:
        id: homeButton
        keep_ratio: False
        allow_stretch: True
        source: "images/menu/Spotify_bonico.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .1)
        canvas.before:
            Color:
                rgba: 0.2,0.5,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size

    GridLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: (.7, .7)
        canvas.before:
            Color:
                rgba: 0.7,0.2,0.8,1
            Rectangle:
                pos: self.pos
                size: self.size