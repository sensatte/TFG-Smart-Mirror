#:kivy 1.0

<GifsWidget>:
    pos: 0, 0

<ScatterImage>:
    source: None
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    auto_bring_to_front: True

    AsyncImage:
        id: image
        source: root.source
        size_hint: 1, 1
        anim_delay: root.anim_delay
