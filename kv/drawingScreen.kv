#:kivy 1.7.0

<DrawingScreen>:

    CanvasWidget:
        id: painter
        size_hint: 1,.9

    ColorWheel:
        id: rueda
        pos_hint:{'center_y': 0, 'center_x': 0.5}
        size_hint:(0.2, 0.2)
        opacity:0

        on_color: root.colorPincel = self.color

    Slider:
        id: grosor
        pos_hint:{'center_y': 0, 'center_x': 0.5}
        size_hint:(0.2, 0.2)
        opacity:0

        value: 10
        min: 5
        max: 20
        step: 1
        orientation: 'vertical'
        
        on_value: root.grosorLinea = self.value

    BoxLayout:
        id: caja
        orientation: 'horizontal'
        size_hint: 1,.1

        ImageButton:
            id: homeButton
            source: "images/menu/previous.png"
            on_press: root.pressedBack(self)

        Button:
            text: "Clear"
            on_press: root.clearDrawing(self)

        Button:
            id:colorcito
            color:[.5,1,1]
            text:'Color'
            on_press: root.ruedaOut = not root.ruedaOut
            background_color:[0, 0, 0, 0]
            canvas.before:
                Color:
                    rgba: rueda.color
                Ellipse:
                    pos: self.pos
                    size: self.size

        Button:
            id:grosorcito
            text:'Width'
            on_press: root.grosorOut = not root.grosorOut

        Button:
            id:guardar
            text:'Guardar'
            on_press: root.guardarImagen()