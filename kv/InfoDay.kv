#:kivy 1.0
<InfoDay>:
    canvas:
        Color:
            rgba: 0,0,1,1
        Rectangle:
            pos: 0, 0
            size: self.size 

<ClockWidget>:
    canvas:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            pos: self.pos
            size: self.size 
    

<DateWidget>:
    # pos_hint: {"y":0.2, "x":0}
    canvas:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            pos: self.pos
            size: self.size
    # font_size: root.height/8
    # text_size: root.size
    # padding_y:0
    # halign: "left"
    valign: "top"


<TempWidget>:
    # pos_hint: {"y":0.2, "right":.5}
    canvas:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            pos: self.pos
            size: self.size 
    # font_size: root.height/8
    # padding_y:0
    # halign: "right"
    valign: "top"
    # text_size: root.size

<WeatherWidget>:
    size_hint: 1, 1
    valign: "center"
    allow_stretch: False
    keep_ratio: False
    canvas:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            pos: self.pos
            size: self.size 
