#:kivy 1.0
<GymConfig>:
    size_hint:.4,.4
    id: main
    TabbedPanel:
        id:panel
        size_hint: 1,.75
        background_color: 0,0,0,0
        do_default_tab: False
        padding: [0,5,0,5]
        tab_width: self.parent.width / 2
        tab_height: 30
        pos_hint: {"center_x": .5, "center_y": .5}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2.
                rectangle: self.x, self.y, self.width, self.height 

    #Semana
        TabbedPanelItem:
            background_color: 1,0,0,0
            text: "Semana"
            width: 10
            id:semana
            color: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
            GridLayout:
                id: showNotes
                cols: 2
                padding: 15
    
    #Mes
        TabbedPanelItem:
            background_color: 1,0,0,0
            text: "Mes"
            width: 10
            id:mes
            color: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
            GridLayout:
                id: showNotes
                cols: 2
                padding: 15


                
    ImageButton:
        id: homeButton
        size_hint_y: None
        source: "images/menu/previous.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .11)
        on_press: root.pressedBack(self)
