#:kivy 1.0
<GymConfig>:
    size_hint:.4,.4
    id: main
    TabbedPanel:
        id:panel
        size_hint: 1,.75
        background_color: 0,0,0,0
        do_default_tab: False
        padding: [0,5,0,5]
        tab_width: self.parent.width / 2
        tab_height: 30
        pos_hint: {"center_x": .5, "center_y": .5}
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2.
                rectangle: self.x, self.y, self.width, self.height 
    
    #Mes
        TabbedPanelItem:
            background_color: 1,0,0,0
            text: "Mes"
            width: 10
            id:mes
            color: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
            GridLayout:
                id: showNotes
                cols: 2
                padding: 15

    #Todos
        TabbedPanelItem:
            background_color: 1,0,0,0
            text: "Lista"
            width: 10
            id:todos
            color: (1,1,1,.5) if self.state != 'down' else (1,1,1,1)
            Scrolling:
                GridLayout:
                    id: todosgrid
                    cols: 1
                    padding: 15
                    spacing: 0,5
                    size_hint_y: None
                    height: self.minimum_height

                    BoxLayout:
                        size_hint_y: None
                        orientation: "horizontal"
                        height: 30
                        Image:
                            source: "images\\menu\\weight.png"

                        Image:
                            source: "images\\menu\\schedule.png"
                        
        #############################################
                    Widget:
                        size_hint_y: None
                        height: 6
                        canvas:
                            Color:
                                rgba: 1., 1., 1., .6
                            Rectangle:
                                pos: root.width/20, self.center_y
                                size: root.width-root.width/10, 2
        #############################################


    ImageButton:
        id: homeButton
        size_hint_y: None
        source: "images/menu/previous.png"
        pos_hint: {"center_x": .5, "y": 0}
        size_hint: (.17, .11)
        on_press: root.pressedBack(self)
